# CodeCatalyst Environment Variables for Frontend Repository
# These variables are used in CodeCatalyst workflows

# CodeCatalyst Configuration
CODECATALYST_SPACE_NAME=AWSCocha
CODECATALYST_PROJECT_NAME=people-registry
INFRASTRUCTURE_REPO_NAME=registry-infrastructure
INFRASTRUCTURE_WORKFLOW_ID=cross-repo-deployment

# Frontend Configuration
FRONTEND_NAME=PeopleRegisterFrontend
NODE_VERSION=18
BUILD_COMMAND=npm run build
DIST_DIRECTORY=dist

# Development Configuration
DEV_COMMAND=npm run dev
TEST_COMMAND=npm test
LINT_COMMAND=npm run lint
TYPE_CHECK_COMMAND=npx tsc --noEmit

# Quality Checks
AUDIT_COMMAND=npm audit --audit-level=moderate
OUTDATED_CHECK_COMMAND=npm outdated

# AWS Configuration
AWS_REGION=us-west-2
ENVIRONMENT=production

# Build Optimization
BUNDLE_ANALYZER=npm run analyze
PERFORMANCE_BUDGET=2MB
