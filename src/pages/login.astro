---
// Login page for user authentication
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - AWS User Group Cochabamba</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            width: 100%;
            max-width: 400px;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo {
            width: 80px;
            height: 80px;
            background: #4299e1;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .logo svg {
            width: 40px;
            height: 40px;
            fill: white;
        }

        h1 {
            color: #2d3748;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #718096;
            font-size: 0.9rem;
        }

        .form-section {
            margin-bottom: 1.5rem;
        }

        .info-text {
            text-align: center;
            font-size: 0.9rem;
            color: #718096;
        }

        .info-text p {
            margin-bottom: 0.5rem;
        }

        .info-text a {
            color: #4299e1;
            text-decoration: none;
        }

        .info-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Logo Section -->
        <div class="logo-section">
            <div class="logo">
                <svg viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
            </div>
            <h1>Iniciar Sesión</h1>
            <p class="subtitle">AWS User Group Cochabamba</p>
        </div>

        <!-- Form Section -->
        <div class="form-section">
            <div id="login-form-mount">
                <!-- Form will be mounted here -->
            </div>
        </div>

        <!-- Info Text -->
        <div class="info-text">
            <p>¿No tienes cuenta? <a href="/" style="color: #4299e1;">Regístrate aquí</a></p>
            <p>¿Problemas para acceder? Contacta al administrador.</p>
        </div>
    </div>

    <script>
        console.log('Login page loaded, setting up form...');
        
        // Import authService - this will be available after the module loads
        let authService = null;
        
        // Try to get authService from global scope or import it
        const initAuthService = async () => {
            if (window.authService) {
                authService = window.authService;
                console.log('Using global authService');
            } else {
                try {
                    // Fallback: try to import the module
                    const authModule = await import('/assets/authService.CFcKI7c1.js');
                    authService = authModule.a; // 'a' is the exported name from the minified module
                    console.log('Imported authService module');
                } catch (error) {
                    console.warn('Could not import authService, using direct API calls');
                }
            }
        };
        
        // Create the form immediately
        const container = document.getElementById('login-form-mount');
        container.innerHTML = `
            <form id="simple-login-form" style="text-align: left;">
                <div style="margin-bottom: 1rem;">
                    <label for="email" style="display: block; margin-bottom: 0.5rem; color: #2d3748; font-weight: 500;">Email:</label>
                    <input type="email" id="email" name="email" required 
                           style="width: 100%; padding: 0.75rem; border: 1px solid #d2d6dc; border-radius: 0.375rem; font-size: 1rem;"
                           placeholder="tu@email.com">
                </div>
                <div style="margin-bottom: 1.5rem;">
                    <label for="password" style="display: block; margin-bottom: 0.5rem; color: #2d3748; font-weight: 500;">Contraseña temporal:</label>
                    <input type="password" id="password" name="password" required 
                           style="width: 100%; padding: 0.75rem; border: 1px solid #d2d6dc; border-radius: 0.375rem; font-size: 1rem;"
                           placeholder="Ingresa tu contraseña temporal">
                </div>
                <button type="submit" 
                        style="width: 100%; background: #4299e1; color: white; padding: 0.75rem; border: none; border-radius: 0.375rem; font-size: 1rem; font-weight: 600; cursor: pointer; transition: background-color 0.2s;"
                        onmouseover="this.style.background='#3182ce'" 
                        onmouseout="this.style.background='#4299e1'">
                    Iniciar Sesión
                </button>
            </form>
            <div id="login-message" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
        `;

        // Set up the form handler immediately after creating the form
        console.log('Form created, setting up event handler...');
        
        // Initialize authService
        initAuthService();
        
        // Get form elements
        const form = document.getElementById('simple-login-form');
        const messageDiv = document.getElementById('login-message');
        
        if (!form) {
            console.error('Login form not found');
        } else if (!messageDiv) {
            console.error('Message div not found');
        } else {
            console.log('Form and message div found, attaching event listener...');
            
            // Add form submission handler
            form.addEventListener('submit', async function(e) {
                console.log('Form submitted!');
                e.preventDefault();
                
                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                
                console.log('Email:', email);
                console.log('Password length:', password.length);
                
                if (!email || !password) {
                    messageDiv.style.display = 'block';
                    messageDiv.innerHTML = '<div style="color: #f56565;">Por favor, completa todos los campos.</div>';
                    return;
                }
                
                messageDiv.style.display = 'block';
                messageDiv.innerHTML = '<div style="color: #4299e1;">Iniciando sesión...</div>';
                
                try {
                    const loginUrl = `${API_BASE_URL}${LOGIN_ENDPOINT}`;
                    console.log('Making request to:', loginUrl);
                    
                    const response = await fetch(loginUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ email, password }),
                    });
                    
                    console.log('Response status:', response.status);
                    console.log('Response ok:', response.ok);
                    
                    const data = await response.json();
                    console.log('Response data:', data);
                    console.log('Token field present:', !!data.token);
                    console.log('User field present:', !!data.user);
                    
                    if (response.ok && data.access_token) {
                        console.log('Login successful:', data);
                        
                        messageDiv.innerHTML = '<div style="color: #48bb78;">¡Inicio de sesión exitoso! Redirigiendo...</div>';
                        
                        // Store auth data with correct keys to match dashboard
                        if (data.access_token) {
                            localStorage.setItem('userAuthToken', data.access_token);
                            console.log('Token stored as userAuthToken');
                        } else {
                            console.warn('No access_token received in response');
                        }
                        if (data.user) {
                            localStorage.setItem('userData', JSON.stringify(data.user));
                            console.log('User data stored:', data.user.email);
                        } else {
                            console.warn('No user data received in response');
                        }
                        
                        // Debug: Verify what was stored
                        console.log('Verification - userAuthToken stored:', !!localStorage.getItem('userAuthToken'));
                        console.log('Verification - userData stored:', !!localStorage.getItem('userData'));
                        
                        // Redirect to user dashboard
                        setTimeout(() => {
                            console.log('Redirecting to dashboard...');
                            window.location.href = '/dashboard';
                        }, 1500);
                    } else {
                        console.error('Login failed:', data);
                        const errorMessage = data.message || data.detail || 'Credenciales incorrectas';
                        messageDiv.innerHTML = '<div style="color: #f56565;">Error: ' + errorMessage + '</div>';
                    }
                } catch (error) {
                    console.error('Network error:', error);
                    messageDiv.innerHTML = '<div style="color: #f56565;">Error de conexión. Por favor, intenta nuevamente.</div>';
                }
            });
            
            console.log('Event listener attached successfully');
        }
    </script>
</body>
</html>
