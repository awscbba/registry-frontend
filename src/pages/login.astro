        </div>

        <!-- Welcome Message -->
        <div class="welcome-message">
            <h2>¬°Bienvenido!</h2>
            <p>Ingresa con las credenciales que recibiste en tu email de bienvenida para acceder a tu panel de usuario.</p>
        </div>

        <!-- Login Form Container -->
        <div class="login-form-container">
            <div id="login-form-mount"></div>
        </div>

        <!-- Navigation Links -->
        <div class="navigation-links">
            <a href="/">‚Üê Volver al Registro</a>
            <a href="/admin">Panel Admin</a>
        </div>

        <!-- Info Text -->
        <div class="info-text">
            <p>¬øNo tienes cuenta? <a href="/" style="color: #4299e1;">Reg√≠strate aqu√≠</a></p>
            <p>¬øProblemas para acceder? Contacta al administrador.</p>
        </div>
    </div>

    <!-- Import and mount the LoginForm component -->
    <script>
        // API Configuration
        const API_BASE_URL = 'https://2t9blvt2c1.execute-api.us-east-1.amazonaws.com/prod';
        
        import('/src/components/LoginForm.tsx').then(module => {
            const LoginForm = module.default;
            // Mount the React component
            // Note: This is a simplified approach. In a real app, you'd use proper React rendering
            console.log('LoginForm component loaded');
            
            // For now, show a simple form until we properly integrate React
            const container = document.getElementById('login-form-mount');
            container.innerHTML = `
                <form id="simple-login-form" style="text-align: left;">
                    <div style="margin-bottom: 1rem;">
                        <label for="email" style="display: block; margin-bottom: 0.5rem; color: #2d3748; font-weight: 500;">Email:</label>
                        <input type="email" id="email" name="email" required 
                               style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem;">
                    </div>
                    <div style="margin-bottom: 1.5rem;">
                        <label for="password" style="display: block; margin-bottom: 0.5rem; color: #2d3748; font-weight: 500;">Contrase√±a:</label>
                        <input type="password" id="password" name="password" required 
                               style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem;">
                    </div>
                    <button type="submit" 
                            style="width: 100%; padding: 0.75rem; background: #4299e1; color: white; border: none; border-radius: 6px; font-size: 1rem; font-weight: 500; cursor: pointer; transition: background 0.2s;">
                        Iniciar Sesi√≥n
                    </button>
                </form>
                <div id="login-message" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
            `;

            // Add form submission handler
            const form = document.getElementById('simple-login-form');
            const messageDiv = document.getElementById('login-message');
            
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                
                messageDiv.style.display = 'block';
                messageDiv.innerHTML = '<div style="color: #4299e1;">Iniciando sesi√≥n...</div>';
                
                try {
                    const response = await fetch(`${API_BASE_URL}/auth/login`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ email, password }),
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        messageDiv.innerHTML = '<div style="color: #48bb78;">¬°Inicio de sesi√≥n exitoso! Redirigiendo...</div>';
                        
                        // Redirect to user dashboard or home page
                        setTimeout(() => {
                            window.location.href = '/dashboard';
                        }, 1500);
                    } else {
                        const error = await response.json();
                        messageDiv.innerHTML = '<div style="color: #f56565;">Error: ' + (error.message || 'Credenciales incorrectas') + '</div>';
                    }
                } catch (error) {
                    messageDiv.innerHTML = '<div style="color: #f56565;">Error de conexi√≥n. Por favor, intenta nuevamente.</div>';
                }
            });
        }).catch(error => {
            console.error('Error loading LoginForm component:', error);
            // Fallback is already rendered above
        });
    </script>
</body>
</html>
