---
// Unified Login page using AuthService
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - AWS User Group Cochabamba</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            width: 100%;
            max-width: 400px;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo {
            width: 60px;
            height: 60px;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo svg {
            width: 30px;
            height: 30px;
            fill: white;
        }

        .title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #718096;
            font-size: 0.9rem;
        }

        .form-section {
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #2d3748;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #d2d6dc;
            border-radius: 0.375rem;
            font-size: 1rem;
            transition: border-color 0.2s;
        }

        input:focus {
            outline: none;
            border-color: #4299e1;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        }

        .login-button {
            width: 100%;
            background: #4299e1;
            color: white;
            border: none;
            padding: 0.75rem;
            border-radius: 0.375rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .login-button:hover:not(:disabled) {
            background: #3182ce;
        }

        .login-button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .message {
            margin-top: 1rem;
            padding: 0.75rem;
            border-radius: 6px;
            display: none;
        }

        .message.success {
            background: #f0fff4;
            color: #38a169;
            border: 1px solid #9ae6b4;
        }

        .message.error {
            background: #fed7d7;
            color: #e53e3e;
            border: 1px solid #feb2b2;
        }

        .message.loading {
            background: #ebf8ff;
            color: #3182ce;
            border: 1px solid #90cdf4;
        }

        .info-text {
            text-align: center;
            color: #718096;
            font-size: 0.85rem;
            line-height: 1.4;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Logo Section -->
        <div class="logo-section">
            <div class="logo">
                <svg viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
            </div>
            <h1 class="title">Iniciar Sesión</h1>
            <p class="subtitle">AWS User Group Cochabamba</p>
        </div>

        <!-- Form Section -->
        <div class="form-section">
            <form id="unified-login-form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required placeholder="tu@email.com">
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" required placeholder="Tu contraseña">
                </div>
                
                <button type="submit" class="login-button" id="login-btn">
                    Iniciar Sesión
                </button>
            </form>
            
            <div id="login-message" class="message"></div>
        </div>

        <!-- Info Text -->
        <div class="info-text">
            <p>¿Problemas para acceder? Contacta al administrador.</p>
        </div>
    </div>

    <script type="module">
        console.log('Unified login page loaded');
        
        // Import authService
        import { authService } from '/assets/authService.CFcKI7c1.js';
        
        // Make authService globally available
        window.authService = authService;
        
        // Get form elements
        const form = document.getElementById('unified-login-form');
        const messageDiv = document.getElementById('login-message');
        const loginBtn = document.getElementById('login-btn');
        
        // Show message helper
        function showMessage(text, type = 'loading') {
            messageDiv.className = `message ${type}`;
            messageDiv.textContent = text;
            messageDiv.style.display = 'block';
        }
        
        // Hide message helper
        function hideMessage() {
            messageDiv.style.display = 'none';
        }
        
        // Form submission handler
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                showMessage('Por favor, completa todos los campos.', 'error');
                return;
            }
            
            // Disable form during login
            loginBtn.disabled = true;
            showMessage('Iniciando sesión...', 'loading');
            
            try {
                console.log('Attempting login with AuthService...');
                const result = await authService.login({ email, password });
                
                if (result.success) {
                    console.log('Login successful - user:', result.user?.email);
                    showMessage('¡Inicio de sesión exitoso! Redirigiendo...', 'success');
                    
                    // Redirect after short delay
                    setTimeout(() => {
                        window.location.href = '/dashboard';
                    }, 1500);
                } else {
                    console.error('Login failed - message:', result.message);
                    showMessage(result.message || 'Credenciales incorrectas', 'error');
                }
            } catch (error) {
                console.error('Login error:', error);
                showMessage('Error de conexión. Por favor, intenta nuevamente.', 'error');
            } finally {
                loginBtn.disabled = false;
            }
        });
        
        console.log('Unified login form initialized');
    </script>
</body>
</html>
